{
  "name": "nato-watch",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time Military Aircraft Surveillance",
  "author": "Coding Sharks <codingSharks@proton.me>",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development npm run dev & sleep 3 && electron .",
    "electron:build": "npm run build && electron-builder",
    "vercel": "vercel"
  },
  "build": {
    "appId": "com.codingsharks.natowatch",
    "productName": "NATO Watch",
    "mac": {
      "category": "public.app-category.news",
      "target": ["dmg", "zip"],
      "icon": "public/icon.svg",
      "darkModeSupport": true
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.svg"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@netlify/plugin-nextjs": "^5.15.5",
    "clsx": "^2.0.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.294.0",
    "mapbox-gl": "^3.0.1",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "swr": "^2.2.4",
    "tailwind-merge": "^2.1.0"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vercel": "^33.0.0"
  }
}
